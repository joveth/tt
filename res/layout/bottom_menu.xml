<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main_bottom"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentBottom="true"
    android:background="@drawable/bottom_menu_selector"
    android:clickable="false"
    android:focusable="false"
    android:orientation="vertical"
    android:paddingBottom="5dp"
    android:paddingTop="5dp" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:baselineAligned="false"
        android:clickable="false"
        android:focusable="false"
        android:weightSum="3" >

        <LinearLayout
            android:id="@+id/news_lay"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center_horizontal"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/news_img"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:background="@drawable/news_selector"
                android:contentDescription="@string/str_news"
                android:scaleType="matrix" />

            <TextView
                android:id="@+id/news_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="false"
                android:focusable="false"
                android:text="@string/str_news"
                android:textColor="@drawable/txt_blue_selector"
                android:textIsSelectable="false"
                android:textSize="12sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/donate_lay"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center_horizontal"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/donate_img"
                android:layout_width="32dip"
                android:layout_height="32dip"
                android:background="@drawable/donate_selector"
                android:contentDescription="@string/str_donate"
                android:scaleType="matrix" />

            <TextView
                android:id="@+id/donate_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/str_donate"
                android:textColor="@drawable/txt_selector"
                android:textIsSelectable="false"
                android:textSize="12sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/others_lay"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center_horizontal"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/others_img"
                android:layout_width="32dip"
                android:layout_height="32dip"
                android:background="@drawable/other_selector"
                android:contentDescription="@string/str_others"
                android:scaleType="matrix" />

            <TextView
                android:id="@+id/others_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/str_others"
                android:textColor="@drawable/txt_selector"
                android:textIsSelectable="false"
                android:textSize="12sp" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>