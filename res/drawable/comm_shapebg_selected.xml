<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_focused="true" android:state_pressed="false"><shape>
            <solid android:color="@android:color/white" />

            <stroke android:width="0.5dip" android:color="@color/line_color" />

            <corners android:radius="2.0dip" />
        </shape></item>
    <item android:state_selected="true"><shape>
            <solid android:color="@color/linear_pressed" />

            <stroke android:width="0.5dip" android:color="@color/linear_pressed" />

            <corners android:radius="2.0dip" />
        </shape></item>
    <item android:state_pressed="true"><shape>
            <solid android:color="@color/linear_pressed" />

            <stroke android:width="0.5dip" android:color="@color/linear_pressed" />

            <corners android:radius="2.0dip" />
        </shape></item>
    <item android:state_pressed="false"><shape>
            <solid android:color="@android:color/white" />

            <stroke android:width="0.5dip" android:color="@color/line_color" />

            <corners android:radius="2.0dip" />
        </shape></item>

</selector>